<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
        <meta http-equiv="Pragma" content="no-cache" />
        <meta http-equiv="Expires" content="0" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">
        <title>{% block title %}{{ 'unitec' | trans | capitalize }}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% if '' != analytics %}
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id={{ analytics }}"></script>
        <script>
            let analitycs = "{{ analytics }}";
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', analitycs);
        </script>
        {% endif %}
    </head>
    <body>
        <div id="app">
            <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm" style="background-color: {{ domainConfig.header.backgroundColor }} !important;">
                <a class="navbar-brand" href="{% if app.user is not null and is_granted('IS_AUTHENTICATED_FULLY') %}{{ path('welcome_index') }}{% else %}{{ path('dashboard_index') }}{% endif %}">
                    <img src="{{ domainConfig.header.logo }}" alt="{{ domainConfig.header.websiteName }}" style="width: {{ domainConfig.header.logoWidth }}px;">
                </a>
            </nav>
        </div>
        <main class="py-4">
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
